package sei.la;

import javax.swing.JOptionPane;

/**
 *
 * @author SESI_SENAI
 */
public class SeiLa {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        atividade();
    }
    public static void atividade(){
        String nome=JOptionPane.showInputDialog("Qual o seu nome");
        
        int idade=Integer.parseInt(JOptionPane.showInputDialog("Qual seu ano de nacimento"));
        
        int idadeatual=2021-idade;
        
        int mês=Integer.parseInt(JOptionPane.showInputDialog("qual mês voce naceu"));
        
        int dia=Integer.parseInt(JOptionPane.showInputDialog("Qual dia você naceu"));
        
        nome=nome+" você naceu em "+idade+" no mês "+mês+" no dia "+dia+" e tem atualmente "+idadeatual+" anos ";
        JOptionPane.showMessageDialog(null, nome);
